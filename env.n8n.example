# N8N Integration Environment Configuration
# Copy this file to .env and modify as needed

# N8N Instance Configuration
N8N_WEBHOOK_URL=http://localhost:5678
N8N_ENABLED=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=sk_codealchemy_n8n_2025_secure_key_here

# Security Configuration
ENABLE_IP_WHITELIST=true
ALLOWED_IPS=127.0.0.1,localhost,::1

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_REQUESTS=100

# Webhook Configuration
WEBHOOK_TIMEOUT=10
MAX_WEBHOOK_HISTORY=1000

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# N8N API Keys (for different instances)
N8N_MAIN_API_KEY=sk_codealchemy_n8n_2025
N8N_MONITORING_API_KEY=sk_codealchemy_monitor_2025
N8N_AUTOMATION_API_KEY=sk_codealchemy_auto_2025
