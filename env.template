# CODE_ALCHEMY_PRO Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# CORE SYSTEM CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME=CODE_ALCHEMY_PRO
APP_VERSION=2.0.0
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=localhost
PORT=8501
SECRET_KEY=your-secret-key-here

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# LM Studio Integration
LM_STUDIO_URL=http://localhost:1234
LM_STUDIO_API_KEY=your-lm-studio-api-key
DEFAULT_MODEL=llama-2-7b-chat.gguf

# OpenAI Integration (Optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-organization-id

# Local Model Paths
MODEL_PATH=/Volumes/MICRO/models
CACHE_DIR=./data/cache

# =============================================================================
# N8N INTEGRATION
# =============================================================================

# N8N Server Configuration
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_SECRET=your-webhook-secret

# N8N Workflow IDs
N8N_CONTENT_ANALYSIS_WORKFLOW_ID=workflow-id-here
N8N_FILE_ORGANIZATION_WORKFLOW_ID=workflow-id-here
N8N_PRODUCTIVITY_WORKFLOW_ID=workflow-id-here
N8N_SYSTEM_MONITOR_WORKFLOW_ID=workflow-id-here

# =============================================================================
# DATA STORAGE
# =============================================================================

# File Paths
DATA_DIR=./data
DOCUMENTS_DIR=./data/documents
REPORTS_DIR=./data/reports
LOGS_DIR=./data/logs
BACKUP_DIR=./data/backups

# Database Configuration (if using external DB)
DATABASE_URL=sqlite:///./data/code_alchemy.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=./data/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# GitHub Integration (Optional)
GITHUB_TOKEN=your-github-token
GITHUB_REPOSITORY=your-repo-name

# Google Drive Integration (Optional)
GOOGLE_DRIVE_CREDENTIALS_FILE=./config/google-drive-credentials.json
GOOGLE_DRIVE_TOKEN_FILE=./config/google-drive-token.json

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test Configuration
TESTING=false
TEST_DATABASE_URL=sqlite:///./data/test.db
COVERAGE_REPORT_DIR=./coverage

# Development Tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false
PROFILING_OUTPUT_DIR=./profiles

# =============================================================================
# APPLE SILICON OPTIMIZATIONS
# =============================================================================

# M3 Neural Engine
ENABLE_NEURAL_ENGINE=true
NEURAL_ENGINE_THREADS=8

# Memory Management
UNIFIED_MEMORY_LIMIT=16GB
GPU_MEMORY_FRACTION=0.8

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Recovery Configuration
AUTO_RECOVERY=true
RECOVERY_CHECK_INTERVAL=300
